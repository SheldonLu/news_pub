<%= semantic_form_for [:admin, @news] do |f| %>
    <%= f.semantic_errors :state %>
    <%= f.inputs :name => "新闻" do %>
        <%= f.input :title, :input_html => {:size => 10} %>
        <%= f.input :summary %>
        <%= f.input :categories %>
        <%= f.input :release, :as => :radio, :input_html => { :class => 'rs'}, :collection => {"是" => 1, "否" => 0}, :required => false %>
        <%= f.input :push_datetime, :wrapper_html => { :style => "display:none;" } %>
        <%= f.input :is_top, :as => :radio, :selected => true, :collection => {"是" => 1, "否" => 0}, :required => false %>
        <%= f.input :content, :as => :ckeditor, :input_html => {:cols => 10, :rows => 20}, :toolbar => 'Easy' %>
    <% end %>
    <%= f.buttons :commit %>
<% end %>